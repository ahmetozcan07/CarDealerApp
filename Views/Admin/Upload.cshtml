@{
    ViewData["Title"] = "Upload Car";
}
<h2>Upload New Car</h2>

<form method="post" enctype="multipart/form-data" asp-action="Upload" asp-controller="Admin">
    <div class="mb-2">
        <input class="form-control" name="make" placeholder="Make" required />
    </div>
    <div class="mb-2">
        <input class="form-control" name="model" placeholder="Model" required />
    </div>
    <div class="mb-2">
        <input type="number" class="form-control" name="year" placeholder="Year" />
    </div>
    <div class="mb-2">
        <input type="number" step="0.01" class="form-control" name="price" placeholder="Price" />
    </div>
    <div class="mb-2">
        <textarea class="form-control" name="description" placeholder="Description"></textarea>
    </div>
    <div class="mb-2">
        <input type="file" class="form-control" name="image" />
    </div>
    <button class="btn btn-success" type="submit">Upload</button>
</form>
